@page "/progress-bars"

<PageTitle>Progress bars</PageTitle>

@using Infinity.Blazor.UIControls.ProgressBars

<div style="margin-bottom: 20px;">

    <ProgressBarHalfCircle Color="ProgressBarColor.Red" Value="0" />

    <ProgressBarHalfCircle Color="ProgressBarColor.Red" Value="10" />

    <ProgressBarHalfCircle Color="ProgressBarColor.Green" Value="30" />

    <ProgressBarHalfCircle Color="ProgressBarColor.Yellow" Value="50" />

    <ProgressBarHalfCircle Color="ProgressBarColor.Yellow" Value="80" />

    <ProgressBarHalfCircle Color="ProgressBarColor.Yellow" Value="100" />

</div>

<div>

    <ProgressBarLine Color="ProgressBarColor.Red" Value="0" Width="600px" />

    <ProgressBarLine Color="ProgressBarColor.Red" Value="10" Width="100%" />

    <ProgressBarLine Color="ProgressBarColor.Green" Value="30" Width="200px" />

    <ProgressBarLine Color="ProgressBarColor.Yellow" Value="50" Width="400px" />

    <ProgressBarLine Color="ProgressBarColor.Yellow" Value="80" Width="800px" />

    <ProgressBarLine Color="ProgressBarColor.Yellow" Value="100" Width="1000px" />

    <ProgressBarLine Color="ProgressBarColor.Red" Value="0" Width="500px" />

    <ProgressBarLine Color="ProgressBarColor.Red" Value="10" Width="500px" />

    <ProgressBarLine Color="ProgressBarColor.Green" Value="30" Width="500px" />

    <ProgressBarLine Color="ProgressBarColor.Yellow" Value="50" Width="500px" />

    <ProgressBarLine Color="ProgressBarColor.Yellow" Value="80" Width="500px" />

    <ProgressBarLine Color="ProgressBarColor.Yellow" Value="100" Width="500px" />

</div>
