@using Infinity.Blazor.UIControls.Icons

@if (!Removed)
{
    <div class="triquestra-tag-container @TagType.GetTagTypeCssClass()">
        <span class="triquestra-tag-label">@Label</span>
        @if (CanRemove)
        {
            <CloseIcon Class="triquestra-tag-icon" Color="@(TagType == TagType.Warning ? "black" : "white")" OnRemove="@RemoveIcon" />
        }
    </div>
}